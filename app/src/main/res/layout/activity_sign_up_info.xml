<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tool_bar"
    tools:context=".Activity.SignUpInfoActivity">

    <TextView
        android:id="@+id/SignUpInfoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/SignUpInfoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email address: "
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/SignUpInfoName"/>

    <TextView
        android:id="@+id/SignUpInfoMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number: "
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/SignUpInfoEmail"/>

    <TextView
        android:id="@+id/SignUpInfoDeliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery address: "
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/SignUpInfoMobileNumber"/>

</RelativeLayout>